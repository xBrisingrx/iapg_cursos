<div id="<%= dom_id sector %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= sector.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= sector.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Active:</strong>
    <%= sector.active %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this sector", sector, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this sector", edit_sector_path(sector), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
