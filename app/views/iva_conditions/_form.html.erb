<%= turbo_frame_tag "iva_condition_form" do %>
  <%= form_with(model: iva_condition, class: "contents") do |form| %>
    <%= form.text_field :name,
      placeholder: "Condición", 
      class: "shadow rounded-md border border-gray-200 outline-none px-3 py-1 w-1/4" %>
    <%= form.text_field :description, 
      placeholder: "Descripción",
      class: "shadow rounded-md border border-gray-200 outline-none px-3 py-1 ml-2 w-1/3" %>
    <%= form.submit btn_label, class: "rounded-lg py-1 px-3 ml-2 bg-pink-500 text-white inline-block font-medium cursor-pointer" %>
    <%= link_to 'Cancelar', iva_conditions_path, class: 'rounded-lg py-1 px-3 ml-2 bg-blue-500 text-white inline-block font-medium cursor-pointer' %>
  <% end %>
<% end %>