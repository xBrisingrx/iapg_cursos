<%= tag.tr id: dom_id(company), class: "company bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-100" do %>
  <td class="py-3 px-6"><%= company.cuit %></td>
  <td class="py-3 px-6"><%= company.name %></td>
  <td class="py-3 px-6"><%= company.sector.name %></td>
  <td class="py-3 px-6 text-center">
    <div class="flex item-center justify-center">
        <div class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110">
          <%= link_to company_path(company), data: { turbo_frame: "modal" } do %>
            <%= inline_svg_tag('svg/eye') %>
          <% end %>
        </div>
        <div class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110">
          <%= link_to edit_company_path(company), data: { turbo_frame: 'modal' }  do %>
            <%= inline_svg_tag("svg/edit") %>
          <% end %>
        </div>
        <div class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110">
          <%= link_to modal_disable_company_path(company), data: { turbo_frame: 'modal' }  do %>
            <%= inline_svg_tag("svg/trash") %>
          <% end %>
        </div>
    </div>
  </td>
<% end %>