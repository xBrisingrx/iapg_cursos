    <%= form.label :province_id %>
    <%= form.text_field :province_id, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :city_id %>
