<%= render ModalSmallComponent.new(title: "Esta seguro de eliminar a #{@person.fullname} ?", msg: "Esta persona y sus registros asociados se eliminaran de forma permanente.") do %>
  <%= form_with( model: @person, method: :delete ) do |form| %>
    <%= form.submit "Eliminar", 
      class: "cursor-pointer inline-flex w-full justify-center rounded-md bg-red-600 mr-2 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 sm:ml-3 sm:w-auto"%>
    <% end %>
    <button type="button"
      data-action="click->turbo-modal#hideModal"
      class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto">Cancel</button>
<% end %>